
<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

  <div class="main-container">
    <div class="main-container-row">
      <div class="left-bar col-md-2 col-md-offset-1">
        <div class="col-md-12">
          <%= image_tag(@venue.picture, :width => 130) if @venue.picture.present? %>
        </div>
        <div class="budget">
            Budget <%= @venue.budget%>
        </div>
        <div class="sign-in-options">
          <a href="/users/sign_in">Is this your venue?
          <p>Login now!</a> <!-- How to do link_to -->
        </div>
        <!-- Need to figure out how to align correctly and override Bootstrap -->
        <div class="buttons-for-profile">
          <button type="add-to-favorites" class="btn btn-default">Add to Favorites</button>

          <button type="price-list" class="btn btn-default">Price List</button>
        </div>

        <div class="contact-info">
          <%= @venue.email %>
          <p><%= @venue.phone_number %>
          <p><%= @venue.address %>
          <p><a href="<%= @venue.website %>">Website</a>

          <p>Social Media:
          <p>P T F
        </div>

      </div>



        <div class="main-container-body col-md-8">
          <p id="notice"><%= notice %></p>
          <h2 data-id="<%= @venue.id %>"><%= @venue.name %></h2>
          <div class="image-container">
          <% @venue.medias.each do |media| %>
            <%= image_tag(media.file_name, :id => "venue_image" ) if media.file_name.present? %>
          <% end %>
          </div>

          <div class="faqs col-md-12">
            <strong>FAQs:</strong>
            <%= @venue.faqs %>
          </div>

          <div class="col-md-6">
            <p>
              <strong>Space:</strong>
              <%= @venue.space %>
            </p>

            <p>
              <strong>Capacity:</strong>
              <%= @venue.capacity %>
            </p>

            <p>
              <strong>Available parking:</strong>
              <%= @venue.available_parking %>
            </p>

            <p>
              <strong>Changing rooms:</strong>
              <%= @venue.changing_rooms %>
            </p>

            <p>
              <strong>Restrooms:</strong>
              <%= @venue.restrooms %>
            </p>

            <p>
              <strong>Electric outlets:</strong>
              <%= @venue.electric_outlets %>
            </p>
          </div>

          <div class="col-md-6">
            <p>
              <strong>Indoors:</strong>
              <%= @venue.indoors %>
            </p>

            <p>
              <strong>Outdoors:</strong>
              <%= @venue.outdoors %>
            </p>

            <p>
              <strong>Handicap:</strong>
              <%= @venue.handicap %>
            </p>

            <p>
              <strong>Coordinator:</strong>
              <%= @venue.coordinator %>
            </p>
          </div>

          <div id="map col-md-6">
            MAP HERE
          </div>



          <div class="col-md-12">
            <% if user_signed_in? && current_user.id == @venue.user_id %>
            <%= link_to 'Edit', edit_venue_path(@venue) %>
            <% end %>
            <%= link_to 'Back', venues_path %>
          </div>

      </div>

    </div>
  </div>

