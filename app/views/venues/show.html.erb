<div class="main-container">
  <div class="main-container-row">
    <div class="left-bar col-md-2 col-md-offset-1">
      <h2><%= @venue.name %></h2>
      <div class="venue-profile-picture">
        <%= image_tag(@venue.picture, :width => 100) if @venue.picture.present? %>
      </div>
      <div class="sign-in-options">
        <a href="/users/sign_in">Is this your venue? Login now!</a> <!-- How to do link_to -->
      </div>
      <!-- Need to figure out how to align correctly and override Bootstrap -->
      <div class="buttons-for-profile">
        <button type="add-to-favorites" class="btn btn-default">Add to Favorites</button>

        <button type="price-list" class="btn btn-default">Price List</button>
      </div>

      <div class="contact-info">
        Contact: <%= @venue.email %>

        <p>Phone: <%= @venue.phone_number %>

        <p><a href="<%= @venue.website %>">Website</a>

        <p>Social Media:
        <p>P T F
      </div>

    </div>

    <div class="row">

      <div class="main-container-body col-md-8 col-lg-offset-0">
        <p id="notice"><%= notice %></p>

      <div class="basic-info col-md-6">
        <p>
          <strong>Name:</strong>
          <%= @venue.name %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= @venue.phone_number %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @venue.address %>
        </p>

        <p>
          <strong>City:</strong>
          <%= @venue.city %>
        </p>

        <p>
          <strong>State:</strong>
          <%= @venue.state %>
        </p>

        <p>
          <strong>Zip:</strong>
          <%= @venue.zip %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @venue.email %>
        </p>

        <p>
          <strong>Website:</strong>
          <%= @venue.website %>
        </p>
      </div>

      <div class="logistics col-md-6">
        <p>
          <strong>Space:</strong>
          <%= @venue.space %>
        </p>

        <p>
          <strong>Capacity:</strong>
          <%= @venue.capacity %>
        </p>

        <p>
          <strong>Available parking:</strong>
          <%= @venue.available_parking %>
        </p>

        <p>
          <strong>Changing rooms:</strong>
          <%= @venue.changing_rooms %>
        </p>

        <p>
          <strong>Restrooms:</strong>
          <%= @venue.restrooms %>
        </p>

        <p>
          <strong>Electric outlets:</strong>
          <%= @venue.electric_outlets %>
        </p>
      </div>

      <div class="checkboxes col-md-6">
        <p>
          <strong>Indoors:</strong>
          <%= @venue.indoors %>
        </p>

        <p>
          <strong>Outdoors:</strong>
          <%= @venue.outdoors %>
        </p>

        <p>
          <strong>Handicap:</strong>
          <%= @venue.handicap %>
        </p>

        <p>
          <strong>Coordinator:</strong>
          <%= @venue.coordinator %>
        </p>
      </div>

      <div class="detailed-info col-md-6">
        <p>
          <strong>Budget:</strong>
          <%= @venue.budget%>
        </p>
      </div>

      <div class="photo-album col-md-6">
        <%= image_tag(@venue.picture, :width => 600) if @venue.picture.present? %>
      </div>

      <div class="col-md-12">
        <% if user_signed_in? && current_user.id == @venue.user_id %>
        <%= link_to 'Edit', edit_venue_path(@venue) %>
        <% end %>
        <%= link_to 'Back', venues_path %>
      </div>





    </div>
  </div>
  </div>
</div>

