<div class="main-container">
  <div class="row">

    <div class="col-md-8 col-md-offset-2">
      <% @venues.each do |venue| %>
      <div class="venue-container">
        <div class="thumbnail">
          <%= image_tag(venue.picture, :width => 200) if venue.picture.present? %>
        </div>
        <div class="text-container">
          <a href="/venues/<%= venue.id %>" data-no-turbolink> <!-- How to do with link_to? -->
            <%= venue.name %>
            <p><%= venue.city %>, <%= venue.state %></p>
            <br><%= venue.budget %></br>
          </a>
        </div>
      </div>
      <% end %>
    </div>


  </div>
</div>




